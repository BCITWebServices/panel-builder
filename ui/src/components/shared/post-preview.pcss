@import '../../shared/colors.pcss';

.postSelect{
	position: relative;
	background-color: var(--panel-bg-color-alt);
	padding: 10px;
	border: 1px solid var(--border-color);
	min-height:80px;
	margin-bottom:10px;
}

.title{
	font-size: 16px;
	margin: 0 0 5px;
	width: calc(100% - 90px);
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.excerpt{
	font-size: 12px;
	color: var(--description-text-color)
}

.thumbnail {
	display: block;
	float: right;
	margin:0 0 10px 10px;
	width: auto;
	max-width:80px;
	height: 60px;
	img {
		width: 60px;
		height: 60px;
	}
}

.postControl {
	position: absolute;
	top: 0;
	right: 0;
	text-align: center;
	line-height: 23px;
	padding:0;
	margin:0;
	width: 23px;
	color: var(--white);;
	height: 23px;
	text-decoration: none;
	background-color: var(--color-danger);
	border-radius: 50%;
	display: block;
	outline:0;
	cursor: pointer;
	span{
		line-height: 23px;
	}
}

.edit {
	composes: postControl;
	top: 0;
	right: 27px;
}

.remove {
	composes: postControl;
	top: 0;
	right: 0;
}