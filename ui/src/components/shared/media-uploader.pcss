@import '../../shared/spacing.pcss';
@import '../../shared/colors.pcss';

.container {
	max-width: 300px;
}

.currentUploadedFile{
	display:none;
	&.currentOpen{
		display:block;
	}
	.imagePreview {
		text-align: center;
		padding: 10px;
		background: var(--picker-bg);
		border: 1px solid var(--picker-border);
		border-radius: 3px;
		img {
			display: inline-block;
			max-width: 100%;
			width: 100px;
			cursor: pointer;
		}
	}
}

.uploaderSection{
	display:none;
	&.uploaderOpen{
		display:block;
	}
}

.removeButtonContainer{
	margin:10px 0 20px 0;
}