@import '../../shared/colors.pcss';

.container {
	background-color: var(--panel-bg-color-dark);
	position: fixed;
	z-index:100003;
	width:250px;
	left:300px;
	top:50px;
	bottom:0;
	display:none;
	pointer-events: none;
	opacity:0;
	transition: opacity 100ms cubic-bezier(0.47, 0, 0.745, 0.715);
}

.containerActive{
	opacity:1;
	display: block;
}

.imageContainer {
	display: none;
	img{
		width:100%;
		height:auto;
		float:left;
	}
}

.imageContainerActive {
	display: block;
}
