@import '../../shared/spacing.pcss';
@import '../../shared/colors.pcss';
@import '../../shared/mq.pcss';
@import '../../shared/transitions.pcss';

.field {
	composes: fieldContainer from "../../shared/fields.pcss";
	transform: translate3d(0, 0, 0);
}

.label {
	composes: inputLabel from "../../shared/fields.pcss";
	display: block;
}

.arrow {
	transition: transform 200ms ease-in-out;
	transform: rotate(-90deg);
	margin-left: 6px;

	&.arrowUp {
		transform: rotate(90deg);
	}
}

.description {
	composes: inputDescription from "../../shared/fields.pcss";

	.isColumnType & {
		transition: color 600ms ease-in-out;
		color: var(--dialog-error);
	}

	.hidden.isColumnType & {
		color: var(--description-text-color);
	}
}

.optionImage{
	width:100%;

	img {
		background: var(--border-color-dark);
		opacity: 0.4;
		transition: all 0.1s ease-out;
		-webkit-backface-visibility: hidden;
		backface-visibility: hidden;
		display: block;
		width:100%;
		height:auto;
		box-sizing:border-box;
		margin-bottom:5px;

		.isColumnImg & {
			padding: 25px 5px;
		}
	}
}

.container {
	display: flex;
	flex-direction: row;
	overflow: hidden;
	transition: max-height 600ms ease-in-out;

	&.isColumn {
		max-height: 1000px;
	}

	&.hidden {
		max-height: 0;
	}
}

[data-live-edit="false"] {

	.imageSelectLabel {
		flex: 1;
	}
}

[data-live-edit="true"] {

	.imageSelectLabel {
		flex: 1;
	}

	[data-expanded="true"] {

		.imageSelectLabel {
			flex: 1;
		}
	}
}

.imageSelectLabel {
	display: inline-block;
	vertical-align: top;
	text-align: center;
	font-weight:bold;
	box-sizing:border-box;
	position: relative;
	margin-bottom:5px;

	input[type="radio"] {
		display: none;
	}

	.optionImage .optInner {
		display: block;
		border: 2px solid transparent;

		img {
			display: block;
			margin: 0;
			pointer-events: none;
		}
	}

	input[type="radio"]:checked + .optionImage .optInner, .optionImage .optInner:hover {
		border: 2px solid var(--border-color-dark-alt);
	}

	.optionImage .optInner:hover img {
		opacity: 0.65;
	}

	input[type="radio"]:checked + .optionImage {

		&:before {
			content: '';
			width:25px;
			height:25px;
			position: absolute;
			display: block;
			right:5px;
			top:5px;
			z-index: 10;
			border-radius: 100%;
			background-color: color(var(--black) a(40%)) ;
		}

		&:after{
			content: "\f147";
			font-family:dashicons;
			width:25px;
			height:25px;
			position: absolute;
			display: block;
			right:6px;
			top:6px;
			z-index: 11;
			font-size:20px;
			line-height: 25px;
			color: var(--white);
		}

		img {
			opacity: 1;
		}
	}
}
