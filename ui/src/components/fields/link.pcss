@import '../../shared/spacing.pcss';
@import '../../shared/colors.pcss';

.panel {
	margin-bottom: 1.5em;
	clear: both;
}

.label {
	composes: inputLabel from "../../shared/fields.pcss";
}

.description {
	composes: inputDescription from "../../shared/fields.pcss";
	clear:both;
}

.fieldset {
	border: none;
	padding: 0;
}

.inputGeneric {
	margin-bottom: 5px;
	input {
		width:100%;
		padding: 8px 10px;
	}
	select {
		width:100%;
	}
}

